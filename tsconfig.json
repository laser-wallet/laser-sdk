
{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs", 
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "target": "ES2017", 
    "lib": ["es2018"]

  }
}